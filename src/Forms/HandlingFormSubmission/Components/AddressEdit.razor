@using Models

<div class="col-12">
	<div class="card mb-4">
		@if (!string.IsNullOrEmpty(Title))
		{
			<div class="card-header">
				@Title
			</div>
		}
		<div class="card-body">
			<div class="row mb-4">
				<div class="col-3">
					<label>Line 1</label>
				</div>
				<div class="col-9">
					<InputText @bind-Value=Address.Line1 Class="form-control" />
					<ValidationMessage For=@(() => Address.Line1) />
				</div>
			</div>

			<div class="row mb-4">
				<div class="col-3">
					<label>Line 2</label>
				</div>
				<div class="col-9">
					<InputText @bind-Value=Address.Line2 Class="form-control" />
					<ValidationMessage For=@(() => Address.Line2) />
				</div>
			</div>

			<div class="row mb-4">
				<div class="col-3">
					<label>Town</label>
				</div>
				<div class="col-9">
					<InputText @bind-Value=Address.City Class="form-control" />
					<ValidationMessage For=@(() => Address.City) />
				</div>
			</div>

			<div class="row">
				<div class="col-3">
					<label>Postal code</label>
				</div>
				<div class="col-9">
					<InputText @bind-Value=Address.PostalCode Class="form-control" />
					<ValidationMessage For=@(() => Address.PostalCode) />
				</div>
			</div>
		</div>
	</div>
</div>

@code
{
	[Parameter] public string Title { get; set; }
	[Parameter] public Address Address { get; set; }
}